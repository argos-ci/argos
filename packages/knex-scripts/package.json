{
  "name": "@argos/knex-scripts",
  "version": "2.0.0",
  "private": true,
  "bin": {
    "knex-scripts": "./bin/knex-scripts.js"
  },
  "type": "module",
  "exports": {
    "./package.json": "./package.json"
  },
  "scripts": {
    "build-swc": "swc src -d dist --strip-leading-paths",
    "build": "pnpm run build-swc --delete-dir-on-start",
    "watch-build": "pnpm run build-swc --watch --quiet",
    "check-types": "tsc --noEmit",
    "check-format": "prettier --check --cache --ignore-path=../../.gitignore --ignore-path=../../.prettierignore .",
    "lint": "eslint . --max-warnings 0"
  },
  "sideEffects": false,
  "dependencies": {
    "commander": "^14.0.1",
    "fast-glob": "^3.3.3",
    "ora": "^9.0.0"
  },
  "peerDependencies": {
    "knex": "^3.0.0"
  },
  "devDependencies": {
    "@argos/tsconfig": "workspace:*",
    "@argos/eslint-config": "workspace:*",
    "eslint": "catalog:"
  }
}
