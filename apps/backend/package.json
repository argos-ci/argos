{
  "name": "@argos-ci/backend",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "swc src -d dist",
    "watch-build": "npm run build -- --watch --quiet",
    "setup": "npm run db:create && npm run db:load",
    "check-types": "npm exec tsc --noEmit",
    "db:check-structure": "knex-scripts check-structure",
    "db:create": "npm exec knex-scripts create",
    "db:drop": "npm exec knex-scripts drop",
    "db:dump": "npm run db:migrate:latest && npm exec knex-scripts dump",
    "db:load": "npm exec knex-scripts load",
    "db:seed": "npm exec knex seed:run",
    "db:truncate": "npm exec knex-scripts truncate",
    "db:migrate:latest": "npm exec knex migrate:latest",
    "db:migrate:rollback": "npm exec knex migrate:rollback",
    "db:migrate:make": "npm exec knex migrate:make",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate:latest",
    "watch-server-build-and-synchronize": "node --watch ./dist/processes/proc/build-and-synchronize.js",
    "watch-server-crawl-and-capture": "node --watch ./dist/processes/proc/crawl-and-capture.js",
    "watch-server-screenshot-diff": "node --watch ./dist/processes/proc/screenshot-diff.js",
    "watch-server-web": "node --watch ./dist/processes/proc/web.js",
    "watch-server": "concurrently \"npm:watch-server-*\""
  },
  "dependencies": {
    "@apollo/server": "^4.9.4",
    "@aws-sdk/client-s3": "^3.433.0",
    "@aws-sdk/s3-request-presigner": "^3.433.0",
    "@gitbeaker/rest": "^39.21.1",
    "@graphql-tools/schema": "^10.0.0",
    "@octokit/auth-app": "^6.0.1",
    "@octokit/auth-oauth-app": "^7.0.1",
    "@octokit/core": "^5.0.1",
    "@octokit/openapi-types": "^19.0.0",
    "@octokit/plugin-retry": "^6.0.1",
    "@octokit/rest": "^20.0.2",
    "@octokit/webhooks": "^12.0.3",
    "@octokit/webhooks-types": "^7.3.1",
    "@sentry/node": "^7.74.1",
    "@sindresorhus/slugify": "^2.2.1",
    "@types/ejs": "^3.1.4",
    "ajv": "^8.12.0",
    "amqplib": "^0.10.3",
    "auth-header": "^1.0.0",
    "axios": "^1.5.1",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "convict": "^6.2.4",
    "cors": "^2.8.5",
    "dataloader": "^2.2.2",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-err": "^3.0.0",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.4",
    "graphql-tag": "^2.12.6",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "lodash-es": "^4.17.21",
    "mime": "^3.0.0",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "objection": "^3.1.2",
    "odiff-bin": "^2.6.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "sharp": "^0.32.6",
    "stripe": "^14.1.0",
    "tmp": "^0.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.3",
    "@types/auth-header": "^1.0.4",
    "@types/body-parser": "^1.19.4",
    "@types/compression": "^1.7.4",
    "@types/convict": "^6.1.5",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/factory-girl": "^5.0.9",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/lodash-es": "^4.17.10",
    "@types/mime": "^3.0.3",
    "@types/morgan": "^1.9.7",
    "@types/sharp": "^0.31.1",
    "@types/supertest": "^2.0.15",
    "@types/tmp": "^0.2.5",
    "concurrently": "^8.2.2",
    "factory-girl": "^5.0.4",
    "knex-scripts": "^0.3.6",
    "moment": "^2.29.4",
    "nock": "^13.3.6",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3"
  }
}
