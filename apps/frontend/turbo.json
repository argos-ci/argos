{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": [
        "src/**",
        "package.json",
        "index.html",
        "tailwind.config.js",
        "postcss.config.js",
        "vite.config.ts"
      ],
      "env": ["BUILD_MODE"]
    },
    "watch-build": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    }
  }
}
