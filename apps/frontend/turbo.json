{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**", "index.html", "vite.config.mts"],
      "env": ["BUILD_MODE", "SENTRY_AUTH_TOKEN"]
    },
    "watch-build": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    }
  }
}
