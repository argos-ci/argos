{
  "root": true,
  "plugins": ["import"],
  "extends": ["eslint:recommended", "plugin:import/recommended"],
  "env": {
    "node": true,
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["*.test.?(m)js"],
      "plugins": ["jest"],
      "extends": ["plugin:jest/recommended"],
      "env": {
        "jest": true
      },
      "rules": {
        "jest/no-conditional-expect": "off",
        "no-import-assign": "off",
        "import/namespace": "off"
      }
    }
  ],
  "rules": {
    "no-unused-vars": ["error", { "ignoreRestSiblings": true }]
  }
}
