{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "tags": ["-route", "-utility", "-graphqlType"],
  "workspaces": {
    "apps/backend": {
      "entry": [
        "src/processes/proc/*.ts",
        "src/build/bin/*.ts",
        "src/database/bin/*.ts",
        "src/database/testing/index.ts",
        "src/graphql/definitions/*.ts",
        "scripts/*.ts"
      ],
      "ignore": [
        "db/**/*",
        "knexfile.js",
        "src/graphql/__generated__/**/*",
        "**/bin/**/*"
      ],
      "ignoreDependencies": ["pg", "formidable"]
    },
    "apps/frontend": {
      "ignore": [
        "src/gql/**/*",
        "vite.config.mts",
        "src/util/color-detection/worker.ts"
      ],
      "ignoreDependencies": [
        "@radix-ui/colors",
        "@vitejs/plugin-react-swc",
        "@sentry/vite-plugin",
        "@tailwindcss/vite",
        "tailwindcss",
        "tailwindcss-animate"
      ],
      "vite": {
        "config": []
      }
    }
  },
  "exclude": ["classMembers"],
  "ignore": ["playwright.config.mts"],
  "ignoreBinaries": ["stripe", "ngrok", "op"]
}
