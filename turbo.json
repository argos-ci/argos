{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**", "package.json"]
    },
    "//#codegen": {
      "outputs": [
        "apps/frontend/src/gql/**",
        "apps/frontend/src/gql-fragments.json",
        "apps/backend/src/graphql/__generated__/**"
      ]
    },
    "setup": {
      "dependsOn": ["build"],
      "cache": false
    },
    "check-types": {
      "dependsOn": [],
      "outputs": []
    },
    "check-format": {
      "dependsOn": [],
      "outputs": []
    },
    "lint": {
      "dependsOn": [],
      "outputs": []
    },
    "static-checks": {
      "dependsOn": ["check-types", "check-format", "lint"]
    },
    "watch-build": {
      "dependsOn": ["build"],
      "persistent": true,
      "cache": false
    },
    "watch-server": {
      "persistent": true,
      "cache": false
    },
    "//#watch-codegen": {
      "persistent": true,
      "cache": false
    }
  }
}
