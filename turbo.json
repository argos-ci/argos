{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": ["BUILD_MODE", "CI"]
    },
    "//#codegen": {
      "outputs": [
        "apps/frontend/src/gql/**",
        "apps/frontend/src/gql-fragments.json",
        "apps/backend/src/graphql/__generated__/**"
      ]
    },
    "setup": {
      "dependsOn": ["build"],
      "cache": false
    },
    "check-types": {
      "dependsOn": [],
      "outputs": []
    },
    "watch-build": {
      "dependsOn": ["build"],
      "persistent": true,
      "cache": false
    },
    "watch-server": {
      "persistent": true,
      "cache": false
    },
    "//#watch-codegen": {
      "persistent": true,
      "cache": false
    }
  }
}
